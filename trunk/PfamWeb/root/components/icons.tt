
[%#
# icons.tt
# jt6 20060406 WTSI
#
# overview icons for the top of the page
#
# $Id: icons.tt,v 1.10 2006-08-14 11:08:47 jt6 Exp $
%]

[% icons = [
             { id     = "archIcon",
               count  = summaryData.numArchitectures,
               items  = "architectures",
               item   = "architecture" },
             { id     = "seqIcon",    
               count  = summaryData.numSequences,
               items  = "sequences",
               item   = "sequence" },
             # this is hard coded !
             { id     = "ipfamIcon",
               count  = summaryData.numInt,
               items  = "interactions",
               item   = "interaction" },
             # that was hard coded !
             { id     = "specIcon",
               count  = summaryData.numSpecies,
               items  = "species"
               item   = "species" },
             { id     = "structIcon",
               count  = summaryData.numStructures,
               items  = "structures",
               item   = "structure" },
           ]
%]

<div id="icons">
  [% FOREACH icon IN icons %]
    [% block = layouts.${pageType}.iconLinks.${icon.id} %]
    [% IF activity.$block %]
      <a href="javascript:show('[% block %]')" id="[% icon.id %]"><em>[% icon.count %]</em>&nbsp;[% icon.count > 1 ? icon.items : icon.item %]</a>
    [% ELSE %]
      <span id="[% icon.id %]"><em>[% icon.count %]</em>&nbsp;[% icon.items %]</span>
    [% END %]
  [% END %]
</div>
