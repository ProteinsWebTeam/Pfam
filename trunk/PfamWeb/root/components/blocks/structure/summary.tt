    // topsan annotation
    var r = new Ajax.Updater(
      "topsan",
      "[% c.uri_for( '/structure/annotations/topsan', pdbId ) %]",
      {
        onFailure:  function( oResponse ) {
                      $("topsan").update( "TOPSAN annotation loading failed." );
                    }
      }
