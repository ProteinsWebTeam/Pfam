
[%
# icons.tt
# jt6 20060406 WTSI
#
# overview icons for the top of the page
#
# $Id: icons.tt,v 1.3 2008-07-25 13:28:35 jt6 Exp $

# the icons generated by this list appear in reverse order, because they get
# floated inside of the enclosing div
icons = [
          { id     = "structIcon",
            count  = summaryData.numStructures,
            items  = "structures",
            item   = "structure" },
          { id     = "specIcon",
            count  = summaryData.numSpecies,
            items  = "species"
            item   = "species" },
          { id     = "seqIcon",    
            count  = summaryData.numSequences,
            items  = "sequences",
            item   = "sequence" },
        ];
%]

<div id="icons" class="cbb icons[% IF iconsDisabled %] disabled[% END %]">
  [% FOREACH icon IN icons;
    block = layouts.${pageType}.iconLinks.${icon.id};
    IF activity.$block %]
      <span class="link" 
            onclick="tabPage.switchTab('[% block %]');" 
            id="[% icon.id %]">
        <em>[% icon.count || "0" %]</em>
        &nbsp;[% icon.count == 1 ? icon.item : icon.items %]
      </span>
    [% ELSE %]
      <span class="inactive" 
            id="[% icon.id %]">
        <em>[% icon.count || "0" %]</em>
        &nbsp;[% icon.items %]
      </span>
    [% END;
  END %]
</div>
