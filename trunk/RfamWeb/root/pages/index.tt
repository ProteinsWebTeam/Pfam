  // example values for the various forms
  var exRfamId = "snoZ107_R87";
  var exKw     = "spliceosomal";
  var exTx     = "plasmodium";
  var exSeq    = "AGUUACGGCCAUACCUCAGAGAAUAUACCGUAUCCCGUUCGAUCUGCGAAGUUAAGCUCU\n\
